
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading"><%= image_tag 'wtclogo.png' %></h2>

  <div class="login-wrap">
    <div class="user-login-info">
    <%= content_tag(:div, flash[:error], class: "alert alert-danger") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], class: "alert alert-info") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], class: "alert alert-danger") if flash[:alert] %>
      <%= f.text_field :email, autofocus: true, placeholder: "Email", class: 'form-control' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control' %>
    </div>
    <label class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <%- if devise_mapping.recoverable? %>
        <span class="pull-right">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </span>
      <% end -%>
    </label>
    <%= f.submit "Sign in", class:"btn btn-lg btn-login btn-block" %>
    <%- if devise_mapping.omniauthable? %>
      <div class="user-login-info omniauth">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <a href="<%= omniauth_authorize_path(resource_name, provider)%>" class="btn btn-lg btn-login btn-block btn-<%= provider.to_s %>">
           <%= fa_icon provider.to_s, text: "Sign in with #{provider.to_s.titleize}" %>
         </a>
       <% end -%>
     </div>
   <% end -%>
   <div class="registration">

    <%- if devise_mapping.registerable? %>
      <div class="pull-right"><%= link_to "Sign Up", new_registration_path(resource_name) %></div>
    <% end -%>
    <a href="http://www.watchthinkchat.com/" title="Are you lost?">‚Üê Back to WatchThinkChat</a>
  </div>

  </div>
<% end %>