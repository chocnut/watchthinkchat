<div class="col-md-12">
  <%- if @campaigns.empty? %>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 empty-state text-center">
      <h2><%= t 'campaigns.new_user.title' %></h2>
      <p><%= t 'campaigns.new_user.description' %></p>
      <br />
      <a class="btn btn-default btn-primary btn-lg" href="<%= new_campaign_path %>">
        <%= fa_icon "plus-circle" %>
        <%= t 'campaigns.new' %>
      </a>
    </div>
  </div>
  <% else %>
    <div class="campaigns">
      <%= render 'actions' %>
      <% @campaigns.decorate.in_groups_of(3) do |campaign_group| %>
        <div class="row">
          <% campaign_group.each do |campaign| %>
            <div class="col-md-4">
              <% if campaign %>
                <% Globalize.with_locale(campaign.locale.try(:code) || I18n.locale) do %>
                  <%= render partial: 'campaign', locals: { campaign: campaign } %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
      <%= render 'actions' %>
    </div>
  <% end -%>
</div>