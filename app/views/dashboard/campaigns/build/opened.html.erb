<% Globalize.with_locale(@campaign.locale.try(:code) || I18n.locale) do %>
  <%= render 'header' %>
  <% content_for(:title) { t 'campaigns.build.progress.opened.title' } %>
  <% content_for(:subtitle) { t 'campaigns.build.progress.opened.description' } %>
  <div class="container-fluid">
    <div class="text-center">
      <h1 class="big-circle"><%= fa_stacked_icon "bolt inverse", base: "circle" %></h1>
      <h2><%= t('campaigns.build.opened.title') %></h2>
      <h5><%= t('campaigns.build.opened.description') %></h5>
      <h5><%= link_to @campaign.permalink, @campaign.permalink, target: '_blank' %></h5>
    </div>
  </div>
  <%= render partial: 'progress', locals: { f: nil } %>
<% end %>