<%= render 'progress' %>
<div class="col-md-9">
  <section class="panel">
    <header class="panel-heading">
      Campaign Wizard
    </header>
    <%= semantic_form_for @campaign, url: wizard_path, method: :put, html: {class: 'form-horizontal'} do |f| %>
      <div class="panel-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <%=  f.input :name, input_html: {class: 'form-control', placeholder: 'Campaign Name'}  %>
            </div>
            <div class="col-md-12">
              <%=  f.input :locale, input_html: { class: 'form-control select2'}, collection: Locale.all, label: 'Base Locale' %>
            </div>
            <div class="col-md-12">
              <%=  f.input :locales, input_html: { class: 'form-control select2'}, collection: Locale.all %>
            </div>
            <div class="col-md-12">
              <%= f.input :url %>
              <%= f.input :subdomain, as: :radio, collection: [['Subdomain', true], ['CNAME Address', false]], label: false %>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer clearfix">
        <div class="pull-right">
          <%= f.submit "Next", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </section>
</div>