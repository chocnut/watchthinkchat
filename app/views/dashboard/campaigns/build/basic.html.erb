<% Globalize.with_locale(@campaign.locale.try(:code) || I18n.locale) do %>
<%= render 'progress' %>
<div class="col-md-9">
  <section class="panel">
    <header class="panel-heading">
      <%= t 'campaigns.build.title' %>
    </header>
    <%= semantic_form_for @campaign, url: wizard_path, method: :put, html: {class: 'form-horizontal'} do |f| %>
      <div class="panel-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <%=  f.input :name, input_html: {class: 'form-control', placeholder: 'Campaign Name'}  %>
            </div>
            <div class="col-md-12">
              <%=  f.input :locale, input_html: { class: 'form-control select2'}, collection: Locale.all.decorate %>
            </div>
            <div class="col-md-12">
              <%=  f.input :locales, input_html: { class: 'form-control select2'}, collection: Locale.all.decorate %>
            </div>
            <div class="col-md-12">
              <%= f.input :url %>
              <%= f.input :subdomain, as: :radio, collection: [[t('activerecord.attributes.campaign.subdomain'), true], [t('activerecord.attributes.campaign.cname_address'), false]], label: false %>
            </div>
            <div class="col-md-12">
              <%=  f.input :intro %>
            </div>
            <div class="col-md-12">
              <%=  f.input :description, input_html: { rows: 5 } %>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer clearfix">
        <div class="pull-right">
          <%= f.submit t('campaigns.build.next'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </section>
</div>
<% end %>