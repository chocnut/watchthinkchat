<div class="col-md-3">
  <div class="list-group wizard-progress">
    <a href="<%= wizard_path :basic %>" class="<%= step_class :basic %>">
      <%- if @campaign.status.to_sym == :basic %>
        <div class="pull-right"><%= fa_icon 'angle-right' %></div>
      <% end -%>
      <h4>Getting Started</h4>
      <small>Basic Campaign Info</small>
    </a>
    <a href="<%= wizard_path :engagement_player %>" class="<%= step_class :engagement_player %>">
      <%- if @campaign.status.to_sym == :engagement_player %>
        <div class="pull-right"><%= fa_icon 'angle-right' %></div>
      <% end -%>
      <h4>Engagement Player</h4>
      <small>Media and Onboarding</small>
    </a>
    <a href="<%= wizard_path :engagement_player_survey %>" class="<%= step_class :engagement_player_survey %>">
      <%- if @campaign.status.to_sym == :engagement_player_survey %>
        <div class="pull-right"><%= fa_icon 'angle-right' %></div>
      <% end -%>
      <h4>Survey</h4>
      <small>Questions and Options</small>
    </a>
    <a href="<%= wizard_path :community %>" class="<%= step_class :community %>">
      <%- if @campaign.status.to_sym == :community %>
        <div class="pull-right"><%= fa_icon 'angle-right' %></div>
      <% end -%>
      <h4>Community</h4>
      <small>Connect with Visitors</small>
    </a>
    <a href="<%= wizard_path :opened %>" class="<%= step_class :opened %>">
      <h4>Finish</h4>
      <small>Go Live</small>
    </a>
  </div>
</div>