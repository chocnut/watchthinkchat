<%= render 'progress' %>
<div class="col-md-9">
  <section class="panel">
    <header class="panel-heading">
      Campaign Wizard
    </header>
    <%= semantic_form_for @campaign, url: wizard_path, method: :put, html: {class: 'form-horizontal'} do |f| %>
      <%= f.semantic_fields_for :share, @campaign.share || @campaign.build_share do |c| %>
        <%=  c.hidden_field :id %>
        <div class="panel-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <%= c.input :enabled, as: :radio, collection: [['On', true], ['Off', false]], label: 'Share' %>
              </div>
              <div class="enabled_fields">
                <div class="col-md-12">
                  <%=  c.input :title, input_html: { value: c.object.decorate.title } %>
                </div>
                <div class="col-md-12">
                  <%=  c.input :description, input_html: { value: c.object.decorate.description } %>
                </div>
                <p>Allow Visitors to Share Campaign On:</p>
                <div class="row">
                  <div class="col-md-3">
                    <%=  c.input :facebook %>
                  </div>
                  <div class="col-md-3">
                    <%=  c.input :twitter %>
                  </div>
                  <div class="col-md-3">
                    <%=  c.input :link %>
                  </div>
                  <div class="col-md-3">
                    <%=  c.input :email %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <div class="panel-footer clearfix">
        <div class="pull-right">
          <a href="<%= previous_wizard_path %>" class="btn">Previous</a>&nbsp;
          <%= f.submit "Next", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </section>
</div>
<%- content_for :javascript do %>
  <script type="text/javascript">
  $('.enabled_fields').hide();

  if ($("input:radio[name='campaign[share_attributes][enabled]']:checked").val() == "true" )
    $('.enabled_fields').show();

  $('#campaign_share_attributes_enabled_input input').change(function () {
    if ($(this).val() == "true") {
      $('.enabled_fields').show();
    } else {
      $('.enabled_fields').hide();
    }
  });
  </script>
<% end -%>