<div class="col-md-12">
  <section class="panel">
    <header class="panel-heading">
      Campaign
    </header>
    <div class="panel-body panel-index-body">
    <table class="table table-striped index-table">
        <tbody>
          <tr>
            <td style="background-image: url(//img.youtube.com/vi/<%= @campaign.engagement_player.try(:youtube_video_id) %>/maxresdefault.jpg)">
              <div class="button-row">
                <a href="<%= campaigns_path %>" class="btn btn-default">
                  <%= fa_icon "chevron-left" %>
                </a>
                <a href="<%= campaign_build_path(id: :basic, campaign_id: @campaign.id) %>" class="btn btn-primary">
                  <%= fa_icon "pencil" %>
                </a>
                <a href="<%= %>" class="btn btn-danger">
                  <%= fa_icon "trash-o" %>
                </a>
              </div>
              <div class="pull-left cover">
                <h3><%= @campaign.name %></h3>
                <small class="text-muted">
                  Created on <%= @campaign.created_at.strftime("%m/%d/%Y") %>
                  &middot;
                  Last updated <%= time_ago_in_words @campaign.updated_at %> ago
                </small>
                <br />
                <%- unless @campaign.engagement_player.blank? %>
                  <span class="label label-primary">engagement player</span>
                <% end -%>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="panel-content">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li class="active">
            <a href="#statistics" role="tab" data-toggle="tab">Statistics</a>
          </li>
          <%- unless @campaign.engagement_player.blank? %>
            <li>
              <a href="#engagement_player" role="tab" data-toggle="tab">Engagement Player</a>
            </li>
          <% end -%>
          <%- unless @campaign.available_locales.empty? %>
          <li>
            <a href="#translation" role="tab" data-toggle="tab">Translation</a>
          </li>
          <% end -%>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active" id="statistics">
            Cool Graphs and Stuff
          </div>
          <%- unless @campaign.engagement_player.blank? %>
          <div class="tab-pane" id="engagement_player">
            <div class="row">
              <div class="col-md-8">
                <h3><%= fa_icon "angle-double-right" %> Media</h3>
                <div class="js-video widescreen">
                  <iframe width="560" height="315" src="http://www.youtube.com/embed/<%= @campaign.engagement_player.try(:youtube_video_id) %>?modestbranding=1&amp;rel=0&amp;showinfo=0&amp;theme=light&amp;color=white&amp;autohide=0" frameborder="0"></iframe>
                </div>
              </div>
              <div class="col-md-4">
                <h3><%= fa_icon "angle-double-right" %> Survey</h3>

                <table class="table table-striped">
                  <tbody>
                    <% @campaign.engagement_player.survey.questions.each do |question| %>
                      <tr>
                        <td>
                          <h4><%= question.title %></h4>
                          <h5><%= question.help_text %></h5>
                          <ul>
                          <% question.options.each do |option| %>
                            <li>
                              <a href="#">
                                <%= fa_icon "link" %>
                                <%= option.title %>
                              </a>
                            </li>
                          <% end %>
                          </ul>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <% end -%>
          <%- unless @campaign.available_locales.empty? %>
            <div class="tab-pane" id="translation">
            <h3><%= fa_icon "angle-double-right" %> <span class="text-muted">Base Locale:</span> <%= @campaign.locale.name %></h3>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Type</th>
                    <th>Field</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                  <% Translation.base.where(campaign: @campaign).order(:created_at).each do |translation| %>
                    <tr>
                      <td><%= translation.resource_type %></td>
                      <td><%= translation.field.titleize %></td>
                      <td><%= translation.content %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <% @campaign.available_locales.each do |campaign_locale| %>
                <h3><%= campaign_locale.locale.name %></h3>
              <% end %>
            </div>
          <% end -%>
        </div>
      </div>
    </div>
    <div class="panel-footer clearfix">
      <div class="pull-right">
        <a href="<%= campaigns_path %>" class="btn">Back</a>&nbsp;
        <a class="btn btn-default btn-primary" href="<%= new_campaign_path %>">
          <%= fa_icon "plus-circle" %>
          Create New campaign
        </a>
      </div>
    </div>
  </section>
</div>