<%= semantic_form_for current_user, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :locale, as: :select, collection: I18n.available_locales.map { |e| ["#{language(e.to_s.split('-')[0]).titleize} #{country(e.to_s.split('-')[1]).titleize}", e]  }, input_html: { class: 'form-control', onchange: 'submit(this.value)' }, label: false, prompt: t('language')  %>
<% end %>